include ../../components/menu.pug

- var menuItems = ["Главная", "Услуги", "Кейсы", "Контакты"]
header.main-header
  div.main-header__wrapper.container
    a(href="/").main-header__logo
      include ../../../assets/svg/webmind_logo.svg
